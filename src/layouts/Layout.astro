---
import "../styles/global.css"; 
// Thêm isHome vào Props
interface Props {
  title: string;
  logo?: string;
  isHome?: boolean;
}

const { title, logo, isHome } = Astro.props;
---

<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  </head>
  
  <body class={`flex flex-col bg-[#0f172a] ${isHome ? 'h-screen overflow-hidden' : 'min-h-screen'}`}>
    
    {logo && !isHome && (
      <header class="flex justify-center mb-12 pt-8">
         <a href={import.meta.env.BASE_URL} class="hover:opacity-80 transition-opacity">
            <img src={logo} alt="Series Logo" class="h-24 w-auto object-contain drop-shadow-2xl" />
          </a>
      </header>
    )}
    
    <main class={isHome ? 'flex-1 w-full' : 'flex-1 w-full max-w-7xl mx-auto px-6 pb-8'}>
      <slot /> 
    </main>

    {!isHome && (
      <footer class="py-8 border-t border-white/5 text-center mt-auto">
        <p class="text-slate-500 text-sm font-medium">
          &copy; {new Date().getFullYear()} Rainei Lyrics List.
        </p>
      </footer>
    )}

  </body>
</html>